{
  "jsc": {
    "target": "es5",
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": true,
  "exclude": ["coverage"]
}
